<% layout("/layouts/boilerplate")%>
<body>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
        <div><label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter title" type="text" class="form-control">
        </div>
        <div>
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" 
        placeholder="Enter description" 
        class="form-control"></textarea>
        </div>
       <div>
        <label for="image" class="form-label">Image Link</label>
         <input name="listing[image]"
        placeholder="Enter image URL" type="text"
         class="form-control">
        </div>
       <div> 
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]"
        placeholder="Enter price" type="number"
         class="form-control">
        </div>
        <input name="listing[country]" placeholder="Enter country" type="text"  class="form-control">
        <br/> <br/>
        <input name="listing[location]" placeholder="Enter location" type="text"  class="form-control">
        <br/> <br/>
        <button type="btn-dark-btn">Add</button>
    </form>
</body>

